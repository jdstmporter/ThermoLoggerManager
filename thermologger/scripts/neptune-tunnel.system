[Unit]
Description=Setup a secure tunnel to neptune.vm.tornadovps.net
After=network.target

[Service]
User=julianporter
Group=julianporter
EnvironmentFile=/etc/default/neptune-tunnel
ExecStart=/usr/bin/ssh -NT -o ServerAliveInterval=60 -o ExitOnForwardFailure=yes -L ${LOCAL_PORT}:127.0.0.1:${REMOTE_PORT} -i /home/$ ${TARGET}
RestartSec=5
Restart=always

[Install]
WantedBy=multi-user.target